<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    
    function submitForm() {
        var formData = {
            RemindDayCount: $("#Count").val(),
            RemindDayCountName: $("#CountName").val(),
            Add: true
        
        };

        $.ajax({
            url: "/Definitions/ReminderDate",
            type: "POST",
            data: JSON.stringify(formData),
            contentType: 'application/json',
            success: function (response) {
                location.reload();
            },
            error: function (xhr, status, error) {

            }
        });
    }

    function updateReminder(id) { 
        var count = $("#guncelle_" + id).closest("tr").find("td[data-count]").data("count");
        var countName = $("#guncelle_" + id).closest("tr").find("td[data-name]").data("name");
        // $("#ReminderID").val(id);
        // $("#Count").val(count);
        // $("#CountName").val(countName);
    debugger;

        // Başlık ve ChronicProblemsID değerlerini modal içindeki giriş alanlarına yerleştir
        $("#myForm2 #ReminderID").val(id);
        $("#myForm2 #CountUpdate").val(count);
        $("#myForm2 #CountNameUpdate").val(countName);
    }

    function updateform() {
        
        var ReminderID = $("#ReminderID").val();
        var countupdate = $("#CountUpdate").val();
        var countNameupdate = $("#CountNameUpdate").val();
        var Update = true;

        // HTTP isteği yap
        $.ajax({
            url: '/Definitions/ReminderDate', // Controller ve action adınıza göre değiştirin
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify({ ReminderDateID: ReminderID, RemindDayCount: countupdate, RemindDayCountName: countNameupdate, Update: true }),
            success: function (response) {
                // Başarılı yanıt alındığında yapılacak işlemler
                // Örneğin, modalı kapatmak
                $("#exampleModal2").modal("hide");
                location.reload();
                // Sayfayı yeniden yüklemek veya başka bir işlem yapmak için gerekirse buraya ekleyebilirsiniz
            },
            error: function (xhr, status, error) {
                // Hata durumunda yapılacak işlemler
                console.error(error);
                // Hata mesajını kullanıcıya gösterebilirsiniz
            }
        });
    }


</script>


<script>

    function deleteReminder(id) {
        $.ajax({
            url: '/Definitions/ReminderDate',
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify({ ReminderDateID: id }), // Doğru özellik adı
            success: function (data) {
                location.reload();
            },
            error: function (error) {
                // Hata yanıtını işleyin
            }
        });
    }




</script>
