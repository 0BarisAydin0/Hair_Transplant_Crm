@model List<InfectiousDisease>
@{
    ViewData["Title"] = "InfectiousDisease";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
    int count = 0;
}


<div>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
        Ekle
    </button>
</div>
<br />

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>S.Nu</th>
            <th>Başlık</th>
            <th></th>
             <th></th> 


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            count++;
            <tr>
               
                <td>@count</td>
                <td data-title="@item.Title">@item.Title</td>

                <td>
                    <a onclick="problemupdate('@item.InfectiousDiseaseID')" id="guncelle_@item.InfectiousDiseaseID" data-toggle="modal" data-target="#exampleModal2" class="btn btn-warning waves-effect waves-light">Güncelle</a>

                </td>
                 <td>
                    <a onclick="problemdelete('@item.InfectiousDiseaseID')" class="btn btn-danger waves-effect waves-light">Sil</a>
                </td> 
            </tr>
        }
    </tbody>

</table>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form -->
                <form id="myForm" method="post">
                    <div class="form-group">
                        <label>Başlık:</label>
                        <input type="text" class="form-control" id="Title">
                    </div>

                    <!-- Add more form fields here -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <!-- Button to Submit Form -->
                <button type="button" class="btn btn-primary" onclick="submitForm()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel2">Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form -->
                <form id="myForm2" method="post">

                    <input type="text" class="form-control" id="InfectiousDiseaseID" value="" hidden>
                    <div class="form-group">
                        <label>Başlık:</label>
                        <input type="text" class="form-control" id="TitleUpdate" value="">
                    </div>

                    <!-- Add more form fields here -->
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <!-- Button to Submit Form -->
                <button type="button" class="btn btn-primary" onclick="submitForm2()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
@* <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> *@
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // Function to Submit Form
    function submitForm() {
        var formData = {
            Title: $("#Title").val(),
            Add: true
            // Diğer form verileri buraya eklenebilir
        };

        $.ajax({
            url: "/Definitions/InfectiousDisease",
            type: "POST",
            data: JSON.stringify(formData),
            contentType: 'application/json',
            success: function (response) {
                location.reload();
            },
            error: function (xhr, status, error) {

            }
        });
    }

    function problemupdate(ProblemsID) {
        var title = $("#guncelle_" + ProblemsID).closest("tr").find("td[data-title]").data("title");
        $("#InfectiousDiseaseID").val(ProblemsID);
        $("#TitleUpdate").val(title);

        // Başlık ve ChronicProblemsID değerlerini modal içindeki giriş alanlarına yerleştir
        $("#myForm2 #InfectiousDiseaseID").val(ProblemsID);
        $("#myForm2 #TitleUpdate").val(title);
    }

    function submitForm2() {
        // Form bilgilerini al
        var ProblemsID = $("#InfectiousDiseaseID").val();
        var title = $("#TitleUpdate").val();
        var Update = true;

        // HTTP isteği yap
        $.ajax({
            url: '/Definitions/InfectiousDisease', // Controller ve action adınıza göre değiştirin
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify({ InfectiousDiseaseID: ProblemsID, Title: title, Update: true }),
            success: function (response) {
                // Başarılı yanıt alındığında yapılacak işlemler
                // Örneğin, modalı kapatmak
                $("#exampleModal2").modal("hide");
                location.reload();
                // Sayfayı yeniden yüklemek veya başka bir işlem yapmak için gerekirse buraya ekleyebilirsiniz
            },
            error: function (xhr, status, error) {
                // Hata durumunda yapılacak işlemler
                console.error(error);
                // Hata mesajını kullanıcıya gösterebilirsiniz
            }
        });
    }


</script>


<script>

    function problemdelete(id) {
        $.ajax({
            url: '/Definitions/InfectiousDisease',
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json',
            data: JSON.stringify({ InfectiousDiseaseID: id }), // Doğru özellik adı
            success: function (data) {
                location.reload();
            },
            error: function (error) {
                // Hata yanıtını işleyin
            }
        });
    }


</script>
