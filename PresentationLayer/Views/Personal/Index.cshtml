@model List<Personal>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <a href="/Personal/PersonalAdd" class="btn btn-success waves-effect waves-light">Personel Ekle</a>

</div>
<br />

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Dosya No</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Doğum Tarihi</th>
            <th>Telefon</th>
            <th>Detay</th>
            <th></th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td data-order="1561723222">@item.PersonalID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Scope</td>
                
                <td>
                    <a asp-action="PersonalDetails" asp-route-id="@item.PersonalID" asp-controller="Personal" class="btn btn-primary waves-effect waves-light">Detay</a>
                </td>
                <td>
                    <a asp-action="PersonalUpdate" asp-route-id="@item.PersonalID" asp-controller="Personal" class="btn btn-warning waves-effect waves-light">Güncelle</a>
                </td>
                <td>
                    <a href="/Personal/Delete/@item.PersonalID" class="btn btn-danger waves-effect waves-light">Sil</a>
                </td>
            </tr>
        }


    </tbody>

</table>

