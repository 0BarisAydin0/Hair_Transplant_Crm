<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link href="~/css/site.css" rel="stylesheet" />


@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var title = "";
            var icon = "info";

            switch ("@TempData["Message"]") {
                case "add":
                    title = "Kayıt Eklendi";
                    icon = "success";
                    break;

                case "duplicate":
                    title = "Bu kayıt sistemde var";
                    icon = "info";
                    break;

                case "error":
                    title = "Bir Hata Oluştu Lüften Kontrol Ederek Tekrar Deneyin";
                    icon = "error";
                    break;

                case "maxfile":
                    title = "En fazla 5 görsel yükleyebilirsiniz";
                    icon = "error";
                    break;
                case "delete":
                    title = "Kayıt Silindi";
                    icon = "warning";
                    break;

                case "update":
                    title = "Kayıt Güncellendi";
                    icon = "success";
                    break;
            }

            Swal.fire({
                title: title,
        @*                 text: '@TempData["Message"]', *@
                icon: icon
                            });
                        };
    </script>
}


<!-- SweetAlert CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">

<!-- SweetAlert JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>


@if (TempData["ValidationErrors"] != null)
{
    <script>
        $(document).ready(function () {

            {
                var validationErrors = @Html.Raw(Json.Serialize(TempData["ValidationErrors"]));

                if (validationErrors.length > 0) {
                    var errorList = '<ul>';
                    for (var i = 0; i < validationErrors.length; i++) {
                        errorList += '<li id="errormessage">' + validationErrors[i] + '</li>';
                    }
                    errorList += '</ul>';

                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        html: errorList,
                    });
                }
            }
        });
    </script>
}

